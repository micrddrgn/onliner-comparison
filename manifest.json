{
  "manifest_version": 2,

  "name": "Onliner - сравнение товаров",
  "description": "Сравнение товаров сайта catalog.onliner.by со страниц их технического описания",
  "version": "0.3.2",
  "icons": {
    "16": "images/icons/16.png",
    "48": "images/icons/48.png",
    "128": "images/icons/128.png"
  },
  "browser_action": {
    "default_icon": "images/icons/48.png",
    "default_popup": "templates/popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "http://catalog.onliner.by/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://catalog.onliner.by/*"],
      "css": ["stylesheets/content.css"],
      "js": ["javascripts/content.js"]
    }
  ],
  "background": {
    "scripts": ["javascripts/event.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "images/icons/16.png"
  ]
}
